{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "fetch": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "no-console": 0,
    "react/prop-types": 0,
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  }
}
